<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingBottom="11dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="21dp"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        android:layout_gravity="center"
        android:text="  Add Meal  "
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="42dp">

    </TextView>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@color/white"
        android:padding="11dp"
        android:hint="Enter Name for Meal"
        android:inputType="text">

    </EditText>

    <EditText
        android:id="@+id/pInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@color/white"
        android:padding="11dp"
        android:hint="Enter Protein Value"
        android:inputType="number">

    </EditText>

    <EditText
        android:id="@+id/fInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@color/white"
        android:padding="11dp"
        android:hint="Enter Fat Value"
        android:inputType="number">

    </EditText>

    <EditText
        android:id="@+id/cInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="18dp"
        android:padding="11dp"
        android:hint="Enter Carb Value"
        android:inputType="number">

    </EditText>

    <Button
        android:id="@+id/addMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="11dp"
        android:backgroundTint="@color/black"
        android:text="Add"
        android:textColor="@color/white">

    </Button>




</LinearLayout>